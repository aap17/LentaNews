<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mobileLandMargin"
    card_view:cardElevation="@dimen/mobileLandMargin"
    card_view:cardCornerRadius="@dimen/mobileLandMargin"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/topNewsMobileBackground">
        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/fab_margin"
            android:elevation="5dp"
            android:alpha="0.5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsTitle"
            android:text="Новость для подписчиков здесь"
            android:textSize="@dimen/topNewsTitleSizeMobile"
            android:textColor="@color/subOnlyBackColor"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/backImage"

            android:layout_marginLeft="@dimen/topNews_left_margin"
            android:layout_margin="@dimen/mobileLandMargin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/artText"
            android:text="Текст статьи"
            android:textSize="@dimen/topNewsDescrSizeMobileLand"
            android:textColor="@color/subOnlyBackColor"
            android:layout_below="@+id/newsTitle"
            android:layout_toRightOf="@+id/backImage"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/mobileLandMargin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="Позавчера"
            android:textColor="@color/subOnlyBackColor"
            android:textSize="@dimen/commentSizeMobile"
            android:layout_margin="@dimen/fab_margin"
            android:layout_below="@+id/backImage"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat"
            android:id="@+id/commentBubble"
            android:layout_below="@+id/backImage"
            android:layout_margin="@dimen/fab_margin"
            android:layout_alignRight="@+id/comment"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/comment"
            android:textColor="@color/subOnlyBackColor"
            android:textSize="@dimen/commentSizeMobile"
            android:layout_below="@+id/backImage"
            android:layout_margin="@dimen/fab_margin"
            android:layout_alignParentRight="true"

            />
    </RelativeLayout>


</android.support.v7.widget.CardView>